<div class="display-card">
  <div class="display-content">
    {{#if isSelected}}
      {{#if deleteRequest}}
        <button {{action 'hideDeleteConfirm'}}  class="deleteButton">&#10006;</button>
        <form class="delete-form">
          <label for="confirmDelete">Confirm delete Y/N</label>
          {{input value=confirmDelete id="confirmDelete" class="confirm-input"}}
          <button {{action 'delete' currentQuestion}} class='delete-confirm-button'>Submit</button>
        </form>
      {{else}}
        <button {{action 'showDeleteConfirm'}}  class="deleteButton">&#10006;</button>
      {{/if}}
      {{edit-question currentQuestion=currentQuestion}}
      <p {{action 'hideDetails'}}> {{currentQuestion.question}}</p>
      <p {{action 'hideDetails'}}>Written by: {{currentQuestion.author}}</p>
      <p {{action 'hideDetails'}}>Notes: {{currentQuestion.notes}}</p>
      <ul>
        {{#if displayAnswers}}
          <li class="clickable" {{action 'hideAnswers'}}>Answers: </li>
          <h4>click an answer to add it to your notes</h4>
          <ol>
            {{#each sortedAnswers as |currentAnswer|}}
              <li class="clickable" {{action 'addToNotePad' currentAnswer}}>{{helpful currentAnswer}} {{currentAnswer.answer}}</li>
              <p {{action 'addToNotePad' currentAnswer}}>Written by: {{currentAnswer.author2}}</p>
              <div class="answerVoteBox">
                <p>Was this answer helpful?<span {{action 'upVote' currentAnswer}} class="glyphicon glyphicon-thumbs-up thumbVoteButtons"></span> {{currentAnswer.upVotes}}<span {{action 'downVote' currentAnswer}} class="glyphicon glyphicon-thumbs-down thumbVoteButtons"></span> {{currentAnswer.downVotes}}</p>
                <hr>
              </div>
            {{/each}}
          </ol>
          {{new-answer currentQuestion=currentQuestion newAnswer="newAnswer"}}
        {{else}}
          <li class="clickable" {{action 'showAnswers'}}>Show All {{currentQuestion.answers.length}} Answers? </li>
        {{/if}}
      </ul>
    {{else}}
    {{#if deleteRequest}}
      <button {{action 'hideDeleteConfirm'}}  class="deleteButton">&#10006;</button>
      <form class="delete-form">
        <label for="confirmDelete">Confirm delete Y/N</label>
        {{input value=confirmDelete id="confirmDelete" class="confirm-input"}}
        <button {{action 'delete' currentQuestion}} class='delete-confirm-button'>Submit</button>
      </form>
    {{else}}
      <button {{action 'showDeleteConfirm'}} class="deleteButton">&#10006;</button>
    {{/if}}
    {{edit-question currentQuestion=currentQuestion}}
      <p {{action 'showDetails'}}>{{currentQuestion.question}}</p>
      <p {{action 'showDetails'}}>Written by: {{currentQuestion.author}}</p>
    {{/if}}
  </div>
</div>
