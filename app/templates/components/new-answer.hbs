{{#if addNewAnswer}}
  <form>
    <div class="form-group">
      <label for="author">Author: </label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="answer">Answer: </label>
      {{input value=answer id="answer"}}
    </div>

    <button {{action 'newAnswer'}}>Submit</button>
  </form>
{{else}}
  <button {{action 'answerFormShow'}}>Write Answer</button>
{{/if}}
