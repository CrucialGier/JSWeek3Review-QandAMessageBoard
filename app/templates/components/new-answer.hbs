{{#if addNewAnswer}}
  <form>
    <div class="form-group">
      <label for="answer">Answer: </label>
      {{input value=answer id="answer"}}
    </div>
    <div class="form-group">
      <label for="author2">Author: </label>
      {{input value=author2 id="author2"}}
    </div>
    <button {{action 'newAnswer'}}>Submit</button>
  </form>
{{else}}
  <button {{action 'answerFormShow'}}>Write Answer</button>
{{/if}}
